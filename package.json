{
  "name": "willmendesneto-playground",
  "version": "7.0.2",
  "description": "willmendesneto-playground - Easy way to generate colors from HEX to CSS Filters",
  "author": "Will Mendes <willmendesneto@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willmendesneto/willmendesneto-playground.git"
  },
  "bugs": {
    "url": "https://github.com/willmendesneto/willmendesneto-playground/issues"
  },
  "homepage": "https://github.com/willmendesneto/willmendesneto-playground#readme",
  "sideEffects": false,
  "license": "MIT",
  "browser": "dist/umd/willmendesneto-playground.js",
  "jsnext:main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "es2015": "dist/cjs/index.js",
  "cjs": "dist/cjs/index.js",
  "types": "dist/umd/index.d.ts",
  "keywords": [
    "willmendesneto-playground",
    "css",
    "filter",
    "hex",
    "color"
  ],
  "dependencies": {
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "bundlesize": "^0.18.0",
    "changelog-verify": "^1.1.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-prettier": "^3.1.1",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.4",
    "husky": "^4.2.4",
    "jest": "^25.3.0",
    "jsdom": "^16.2.2",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "rollup": "^1.26.3",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "typings": "^2.1.1",
    "uglify-js": "^3.8.1",
    "version-changelog": "^3.1.0"
  },
  "engines": {
    "node": ">=6.10.2"
  },
  "scripts": {
    "compile": "tsc",
    "clean": "rm -rf ./dist ./.jest ./coverage ./lib",
    "build": "yarn build:es2015 && yarn build:cjs && yarn build:esm && yarn build:umd",
    "build:umd": "rollup dist/esm/index.js --format umd --name HexToCSSFilter -o dist/umd/willmendesneto-playground.js && yarn build:umd:min",
    "build:umd:min": "uglifyjs --compress --mangle --comments -o dist/umd/willmendesneto-playground.min.js -- dist/umd/willmendesneto-playground.js && gzip dist/umd/willmendesneto-playground.min.js -c > dist/umd/willmendesneto-playground.min.js.gz",
    "build:es2015": "tsc --module es2015 --target es2015 --outDir dist/es2015",
    "build:esm": "tsc --module esnext --target es5 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es5 --outDir dist/cjs",
    "test": "jest",
    "pretest:ci": "yarn lint",
    "test:ci": "jest --coverage --coverageReporters=text-lcov",
    "bundlesize": "bundlesize",
    "lint": "eslint '{scripts,src}/**/*.[tj]s'",
    "lint:fix": "prettier --no-editorconfig --write",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "bundlesize": [
    {
      "path": "./dist/esm/index.js",
      "maxSize": "57B"
    },
    {
      "path": "./dist/es2015/index.js",
      "maxSize": "57B"
    },
    {
      "path": "./dist/cjs/index.js",
      "maxSize": "154B"
    },
    {
      "path": "./dist/umd/willmendesneto-playground.js",
      "maxSize": "3.6KB"
    },
    {
      "path": "./dist/umd/willmendesneto-playground.min.js",
      "maxSize": "2.02KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --no-editorconfig --write",
      "git add"
    ]
  },
  "browserslist": [
    "last 1 chrome versions",
    "last 1 edge versions",
    "last 1 firefox versions",
    "last 1 safari versions",
    "last 1 and_chr versions",
    "last 1 ios_saf versions"
  ]
}
